@model IEnumerable<First_CSharp.Models.ExpenseCategory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense Categories</h2>
        </div>

        <div class="col-6 text-right">
            <a class="nav-link btn btn-primary" asp-action="Create" asp-controller="ExpenseType">Create New Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Category name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@item.CategoryName</td>
                    <td width="30%">
                        <div>
                            <a asp-action="Update" asp-controller="ExpenseType" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update Category</a>
                            <a asp-action="Delete" asp-controller="ExpenseType" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete Expense</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no values in Database</p>
    }

</div>


